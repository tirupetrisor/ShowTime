@page "/access-denied"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Access Denied - ShowTime</PageTitle>

<div class="access-denied-page">
    <div class="access-denied-background">
        <div class="animated-shapes">
            <div class="shape shape1"></div>
            <div class="shape shape2"></div>
            <div class="shape shape3"></div>
            <div class="shape shape4"></div>
            <div class="shape shape5"></div>
            <div class="shape shape6"></div>
        </div>
    </div>

    <div class="container">
        <div class="access-denied-container">
            <div class="access-denied-card">
                <div class="card-header">
                    <div class="access-denied-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h1 class="access-denied-title">
                        <span class="title-icon">ðŸš«</span>
                        <span class="title-text">Access Denied</span>
                    </h1>
                </div>
                
                <div class="card-body">
                    <div class="access-denied-content">
                        <h3 class="access-denied-subtitle">You don't have permission to access this page</h3>
                        
                        <p class="access-denied-message">
                            This page requires special permissions that your account doesn't have. 
                            Please contact an administrator if you believe this is an error.
                        </p>
                        

                    </div>
                    
                    <div class="access-denied-actions">
                        <button class="btn btn-primary btn-action" @onclick="GoHome">
                            <i class="fas fa-home"></i>
                            <span>Go to Home</span>
                        </button>
                        
                        <AuthorizeView>
                            <NotAuthorized>
                                <a href="/login" class="btn btn-login btn-action">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <span>Login</span>
                                </a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoHome()
    {
        NavigationManager.NavigateTo("/");
    }
}

<style>
    .access-denied-page {
        min-height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .access-denied-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        z-index: -1;
    }

    .animated-shapes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        opacity: 0.1;
        animation: float 30s infinite linear;
    }

    .shape1 {
        top: 15%;
        left: 10%;
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        animation-delay: 0s;
    }

    .shape2 {
        top: 60%;
        right: 20%;
        width: 60px;
        height: 60px;
        background: white;
        border-radius: 50%;
        animation-delay: 5s;
    }

    .shape3 {
        bottom: 25%;
        left: 5%;
        width: 100px;
        height: 100px;
        background: white;
        border-radius: 20px;
        animation-delay: 10s;
    }

    .shape4 {
        top: 30%;
        right: 10%;
        width: 70px;
        height: 70px;
        background: white;
        border-radius: 50%;
        animation-delay: 15s;
    }

    .shape5 {
        top: 70%;
        left: 30%;
        width: 90px;
        height: 90px;
        background: white;
        border-radius: 25px;
        animation-delay: 20s;
    }

    .shape6 {
        bottom: 40%;
        right: 40%;
        width: 50px;
        height: 50px;
        background: white;
        border-radius: 50%;
        animation-delay: 25s;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        25% { transform: translateY(-25px) rotate(90deg); }
        50% { transform: translateY(0px) rotate(180deg); }
        75% { transform: translateY(-15px) rotate(270deg); }
    }

    .access-denied-container {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        animation: slideInUp 0.8s ease-out;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    @@keyframes slideInUp {
        from {
            transform: translateY(50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .access-denied-card {
        background: rgba(255, 255, 255, 0.98);
        border: none;
        border-radius: 25px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(20px);
        overflow: hidden;
        transition: all 0.3s ease;
        animation: cardPulse 2s infinite;
    }

    @@keyframes cardPulse {
        0%, 100% { box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4); }
        50% { box-shadow: 0 25px 70px rgba(102, 126, 234, 0.3); }
    }

    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        text-align: center;
        border-radius: 25px 25px 0 0;
        position: relative;
        overflow: hidden;
    }

    .card-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        animation: shine 3s infinite;
    }

    @@keyframes shine {
        0% { left: -100%; }
        100% { left: 100%; }
    }

    .access-denied-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }

    .access-denied-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .title-icon {
        font-size: 2.5rem;
        animation: shake 1s infinite;
    }

    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }

    .title-text {
        background: linear-gradient(45deg, #ffffff, #f8f9fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .card-body {
        padding: 2.5rem;
    }

    .access-denied-content {
        text-align: center;
        margin-bottom: 2rem;
    }

    .access-denied-subtitle {
        font-size: 1.4rem;
        color: #495057;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .access-denied-message {
        font-size: 1.1rem;
        color: #6c757d;
        line-height: 1.6;
        margin-bottom: 2rem;
    }



    .access-denied-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 2rem;
    }

    .btn-action {
        border-radius: 50px;
        padding: 15px 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        min-width: 160px;
        justify-content: center;
        font-size: 0.9rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        color: white;
    }

    .btn-secondary:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(108, 117, 125, 0.4);
        color: white;
    }

    .btn-login {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .btn-login:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(40, 167, 69, 0.4);
        color: white;
        text-decoration: none;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .access-denied-container {
            padding: 1rem;
        }

        .card-header {
            padding: 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .access-denied-title {
            font-size: 2rem;
            flex-direction: column;
            gap: 0.5rem;
        }

        .access-denied-subtitle {
            font-size: 1.2rem;
        }

        .access-denied-actions {
            flex-direction: column;
            align-items: center;
        }

        .btn-action {
            width: 100%;
            max-width: 280px;
        }


    }
</style> 