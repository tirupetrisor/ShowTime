@page "/"

<PageTitle>ShowTime - Music Festival Management</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <span class="brand-emoji">🎵</span>
                        ShowTime
                    </h1>
                    <p class="hero-subtitle">Your Complete Music Festival Management Platform</p>
                    <p class="hero-description">
                        Discover amazing festivals, manage your bookings, explore incredible artists, 
                        and create unforgettable music experiences all in one place.
                    </p>
                    <div class="hero-buttons">
                        <a href="/festivals" class="btn btn-primary btn-lg">
                            🎪 Explore Festivals
                        </a>
                        <a href="/artists" class="btn btn-primary btn-lg">
                            🎤 Browse Artists
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="music-graphic">
                        <div class="music-note">🎵</div>
                        <div class="music-note">🎶</div>
                        <div class="music-note">🎤</div>
                        <div class="music-note">🎸</div>
                        <div class="music-note">🥁</div>
                        <div class="music-note">🎺</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<style>
    /* Global Styles */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #14b8a6 0%, #059669 100%);
        color: white;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.08)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.06)"/></svg>');
        opacity: 0.4;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        margin-bottom: 1rem;
        line-height: 1.1;
    }

    .brand-emoji {
        font-size: 4.5rem;
        display: inline-block;
        margin-right: 1rem;
        vertical-align: middle;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        opacity: 0.9;
    }

    .hero-description {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2.5rem;
        opacity: 0.85;
        max-width: 500px;
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .hero-buttons .btn {
        padding: 1rem 2rem;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

    .hero-buttons .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    /* Hero Image */
    .hero-image {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        position: relative;
    }

    .music-graphic {
        width: 400px;
        height: 400px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .music-note {
        position: absolute;
        font-size: 3rem;
        opacity: 0.7;
        color: rgba(255, 255, 255, 0.8);
    }

    .music-note:nth-child(1) { top: 10%; left: 50%; transform: translateX(-50%); }
    .music-note:nth-child(2) { top: 30%; right: 15%; }
    .music-note:nth-child(3) { top: 50%; left: 10%; }
    .music-note:nth-child(4) { bottom: 30%; right: 20%; }
    .music-note:nth-child(5) { bottom: 10%; left: 30%; }
    .music-note:nth-child(6) { top: 20%; left: 20%; }

    /* Features Section removed */



    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .brand-emoji {
            font-size: 3rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .hero-buttons {
            justify-content: center;
        }

        .music-graphic {
            width: 300px;
            height: 300px;
        }

        .music-note {
            font-size: 2rem;
        }

        /* Removed section-title, section-subtitle, feature-card responsive rules */
    }
</style>
