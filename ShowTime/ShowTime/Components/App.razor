@code {
    private MudBlazor.MudTheme Theme = new MudBlazor.MudTheme
    {
        Typography = new MudBlazor.Typography
        {
            Default = new MudBlazor.Default { FontFamily = new[] { "Inter", "system-ui", "-apple-system", "Segoe UI", "Roboto", "Helvetica", "Arial", "sans-serif" } },
            H1 = new MudBlazor.H1 { FontWeight = 800 },
            H2 = new MudBlazor.H2 { FontWeight = 700 },
            H3 = new MudBlazor.H3 { FontWeight = 700 },
            Button = new MudBlazor.Button { FontWeight = 600 }
        },
        Palette = new MudBlazor.PaletteLight
        {
            Primary = "#0EA5E9", // sky-500
            Secondary = "#14B8A6", // teal-500
            Tertiary = "#F59E0B", // amber-500
            Info = "#06B6D4",
            Success = "#10B981",
            Warning = "#F59E0B",
            Error = "#EF4444",
            AppbarBackground = "#ffffff",
            AppbarText = "#0f172a",
            Background = "#f8fafc",
            Surface = "#ffffff",
            TextPrimary = "#0f172a",
            TextSecondary = "#475569",
            DrawerBackground = "#ffffff",
            DrawerText = "#0f172a",
            ActionDefault = "#334155"
        }
    };
}
